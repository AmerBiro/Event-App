<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_activity"
    android:padding="12dp"
    tools:context=".profileView.ViewProfileActivity">


<!--    <Button-->
<!--        android:layout_marginTop="29dp"-->
<!--        android:layout_marginLeft="35dp"-->
<!--        android:layout_width="15dp"-->
<!--        android:layout_height="25dp"-->
<!--        android:background="@drawable/ic_back_arrow"-->
<!--/>-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="75dp">


<!--            <androidx.viewpager2.widget.ViewPager2-->
<!--                android:id="@+id/id_viewpager2_profile_view"-->
<!--                android:layout_width="412dp"-->
<!--                android:layout_height="500dp" />-->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:cardCornerRadius="20dp">
                <ImageView
                    android:id="@+id/UserImage"
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:layout_height="fill_parent"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/number_of_image_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:text="1 / 3" />

            <TextView
                android:id="@+id/Full_Name_Age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:text="" />



            <TextView
                android:id="@+id/Gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/id_viewpager2_profile_view"
                android:text="" />

            <TextView
                android:id="@+id/Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/id_viewpager2_profile_view"
                android:text="" />










            <TextView
                android:id="@+id/city_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/id_viewpager2_profile_view"
                android:text="København NV" />

            <TextView
                android:id="@+id/job_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/id_viewpager2_profile_view"
                android:text="Fotograf hos Hansens Billeder" />

            <TextView
                android:id="@+id/study_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/id_viewpager2_profile_view"
                android:text="Dansk fotograf insititut" />


            <TextView
                android:id="@+id/about_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="40dp"
                android:layout_marginStart="10dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_below="@+id/id_viewpager2_profile_view"
                android:text="About Mads" />

            <TextView
                android:id="@+id/description_text"
                android:layout_width="302dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_viewpager2_profile_view"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="Typpen der altid løber efter bussen, og altid ender med at komme i alt for god tid."
                android:textColor="@color/white"
                android:textSize="14dp" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>