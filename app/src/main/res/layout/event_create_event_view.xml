<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/ic_background_activity"
    android:orientation="vertical"
    android:scaleType="centerCrop"
    tools:context=".event.CreateEventView">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >




            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/tool_bar"
                    tools:ignore="MissingConstraints"
                    />

                <Button
                    android:id="@+id/back_arrow"
                    android:layout_height="25dp"
                    android:layout_width="25dp"
                    style="@style/appBar_arrow_back"
                    tools:ignore="MissingConstraints"
                    />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Event"
                    style="@style/appBar_title"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_margin="24dp"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/sub_title"
                    android:text="Event Image"
                    android:layout_gravity="left"
                    android:layout_marginLeft="24dp"
                    />


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="15dp"
                    >

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        android:id="@+id/event_image"
                        android:layout_gravity="center"
                        />


                </androidx.cardview.widget.CardView>



                <EditText
                    android:id="@+id/event_name"
                    style="@style/field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Name: "
                    android:layout_marginTop="20dp"
                    />

                <EditText
                    android:id="@+id/event_cost"
                    style="@style/field_sub_field"
                    android:inputType="number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Cost: " />

                <EditText
                    android:id="@+id/event_address"
                    style="@style/field_sub_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Location: "
                    android:inputType="text" />




                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >

                    <EditText
                        android:id="@+id/event_date"
                        style="@style/field_sub_field"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Date: "
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <TextView
                        android:id="@+id/date_selector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/field_sub_field"
                        android:paddingTop="10dp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >

                    <EditText
                        android:id="@+id/event_time"
                        style="@style/field_sub_field"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Time: "
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <TextView
                        android:id="@+id/time_selector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/field_sub_field"
                        android:paddingTop="10dp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Age"
                            style="@style/sub_title"
                            android:layout_marginRight="15dp"
                            />

                        <EditText
                            android:id="@+id/age_range"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25-30"
                            android:layout_marginLeft="15dp"
                            style="@style/sub_title"
                            />
                    </LinearLayout>


                    <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
                        android:id="@+id/event_age_range"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="15dp"
                        app:bar_color="@color/white"
                        app:bar_highlight_color="@color/barsColour"
                        app:left_thumb_color="@color/white"
                        app:right_thumb_color="@color/white"
                        />

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >

                    <EditText
                        android:id="@+id/event_type"
                        style="@style/field_sub_field"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Event Type: "
                        android:inputType="textMultiLine"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <TextView
                        android:id="@+id/select_event_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/field_sub_field"
                        android:paddingTop="10dp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <EditText
                    android:id="@+id/event_description"
                    style="@style/field_sub_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Description: "
                    android:inputType="textMultiLine"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    >

                    <Button
                        android:id="@+id/event_click"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/check_mark"
                        android:layout_gravity="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <ProgressBar
                        android:layout_width="36sp"
                        android:layout_height="36sp"
                        android:layout_gravity="center"
                        android:indeterminateTint="@color/font_main_color"
                        android:id="@+id/event_progressBar"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:visibility="invisible"
                        />



                </androidx.constraintlayout.widget.ConstraintLayout>



            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>