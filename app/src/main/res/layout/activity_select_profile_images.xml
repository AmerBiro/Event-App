<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_activity"
    tools:context=".signInView.SelectProfileImages">


    <ImageButton
        android:id="@+id/backArrow"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/ic_back_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.014" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Choose Profile images"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/check_mark"
        android:layout_width="26dp"
        android:layout_height="35dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/check_mark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.958"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.007" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="50dp"
        android:id="@+id/UserImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.131"
        tools:ignore="MissingConstraints" />


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="102dp"
            android:layout_height="102dp"
            android:background="@color/white"
            android:layout_margin="2dp"
            app:cardCornerRadius="20dp">

            <androidx.cardview.widget.CardView
                android:layout_margin="2dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/UserImage1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="fitXY"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:width="8dp"
                    android:background="@drawable/ic_baseline_add_photo_alternate_24"
                    android:textSize="24sp" />

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="102dp"
            android:layout_height="102dp"
            android:background="@color/white"
            android:layout_margin="2dp"

            app:cardCornerRadius="20dp">

            <androidx.cardview.widget.CardView
                android:layout_margin="2dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/UserImage2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="fitXY"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:width="8dp"
                    android:background="@drawable/ic_baseline_add_photo_alternate_24"
                    android:textSize="24sp" />

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="102dp"
            android:layout_height="102dp"
            android:layout_margin="2dp"

            android:background="@color/white"
            app:cardCornerRadius="20dp">

            <androidx.cardview.widget.CardView
                android:layout_margin="2dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/UserImage3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="fitXY"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:width="8dp"
                    android:background="@drawable/ic_baseline_add_photo_alternate_24"
                    android:textSize="24sp" />

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="102dp"
            android:layout_height="102dp"
            android:background="@color/white"
            android:layout_margin="2dp"

            app:cardCornerRadius="20dp">

            <androidx.cardview.widget.CardView
                android:layout_margin="2dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/UserImage4"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="fitXY"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:width="8dp"
                    android:background="@drawable/ic_baseline_add_photo_alternate_24"
                    android:textSize="24sp" />

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="102dp"
            android:layout_height="102dp"
            android:layout_margin="2dp"

            android:background="@color/white"
            app:cardCornerRadius="20dp">

            <androidx.cardview.widget.CardView
                android:layout_margin="2dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/UserImage5"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="fitXY"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:width="8dp"
                    android:background="@drawable/ic_baseline_add_photo_alternate_24"
                    android:textSize="24sp" />

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="102dp"
            android:layout_height="102dp"
            android:layout_margin="2dp"

            android:background="@color/white"
            app:cardCornerRadius="20dp">

            <androidx.cardview.widget.CardView
                android:layout_margin="2dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/UserImage6"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="fitXY"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:width="8dp"
                    android:background="@drawable/ic_baseline_add_photo_alternate_24"
                    android:textSize="24sp" />

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


