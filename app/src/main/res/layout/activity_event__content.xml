<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0833"
    android:gravity="center"
    tools:context=".Event_Content">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingBottom="25dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >


            <ImageView
                android:id="@+id/id_event_background_content"
                android:layout_width="412dp"
                android:layout_height="500dp"
                android:scaleType="centerCrop"
                android:src="@drawable/event_background_02"/>


            <TextView
                android:id="@+id/name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:text="Event name" />


            <TextView
                android:id="@+id/city_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/id_viewpager2_profile_view"
                android:text="KÃ¸benhavn NV" />

            <TextView
                android:id="@+id/job_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/id_viewpager2_profile_view"
                android:text="Fredag 25. sep kl. 18.00" />

            <TextView
                android:id="@+id/study_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/id_viewpager2_profile_view"
                android:text="Gratis" />


            <TextView
                android:id="@+id/about_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="40dp"
                android:layout_marginStart="10dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_below="@+id/id_viewpager2_profile_view"
                android:text="Oplevelsen" />

            <TextView
                android:id="@+id/description_text"
                android:layout_width="302dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_viewpager2_profile_view"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/desc_text"
                android:textColor="@color/white"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/description_text2"
                android:layout_width="302dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_viewpager2_profile_view"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:text="@string/desc_text2"
                android:textColor="@color/white"
                android:textSize="14dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp">


            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="69dp"
                android:layout_marginBottom="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/repost_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageButto2"
                app:layout_constraintHorizontal_bias="0.38"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/imageButto2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="16dp"
                android:layout_toRightOf="@+id/imageButton1"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/wish_to_join_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>